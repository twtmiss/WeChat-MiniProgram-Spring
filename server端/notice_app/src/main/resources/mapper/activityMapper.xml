<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="denggao.wechat.Dao.ActivityMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="denggao.wechat.Beans.ActivityVo" id="ActivityMap">
        <result property="activityId" column="activity_id"/>
        <result property="coverImgUrl" column="cover_img_url"/>
        <result property="activityText" column="activity_text"/>
        <result property="activityHtml" column="activity_html"/>
        <result property="activityMarkdown" column="activity_markdown"/>
        <result property="isShow" column="is_show"/>
    </resultMap>

    <select id="getAllActivityMarkdown" resultMap="ActivityMap">
		select * from activity
	</select>

    <select id="getActivityMarkdownById" resultMap="ActivityMap">
		select * from activity where activity_id = #{activityId}
	</select>

    <insert id="saveActivity" parameterType="denggao.wechat.Beans.ActivityVo" useGeneratedKeys="true" keyProperty="activityId">
        insert into activity(cover_img_url, activity_html, activity_text, activity_markdown, is_show)
        values (#{coverImgUrl}, #{activityHtml}, #{activityText}, #{activityMarkdown}, #{isShow} )
    </insert>

    <update id="ActivityIsShow" parameterType="int">
        update activity set is_show = #{isShowValue} where activity_id = #{activityId}
    </update>

    <update id="updateActivity" parameterType="denggao.wechat.Beans.ActivityVo">
        update activity set cover_img_url = #{coverImgUrl}, activity_markdown = #{activityMarkdown} where activity_id = #{activityId}
    </update>

    <delete id="ActivityDelete">
        delete from activity where activity_id = #{activityId}
    </delete>

</mapper>