page{
  background-color: #F2F6FC;
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  /* align-items:center; */
}

.card{
  background-color: #fff;
  width: 94%;
  height: auto;
  min-height: 50rpx;
  margin: 3% 3% 3% 3%;
  border-radius: 20rpx;
  overflow: hidden;
}
.card_imgPicker{
  width: 94%;
  height: auto;
  min-height: 30rpx;
  margin: 3% 3% 3% 3%;
}

.butn{
  width: 94%;
  height: auto;
  min-height: 30rpx;
  margin: 3% 3% 3% 3%;
  display: flex;
  flex-flow: row-reverse;
  align-content: center;
}
.view_button{
  width:110rpx;
  height: 45rpx;
  border-radius: 20rpx;
  border-width: 1px; 
  border-color: #5CADFF;
  border-style: solid;
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #5CADFF;
}
/* view按钮的点击效果 */
.view_hover{
  opacity: 0.8;
  background-color: #EBEEF5;
}

